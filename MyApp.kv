#:import ScrollEffect kivy.effects.scroll.ScrollEffect
#:import SlideTransition kivy.uix.screenmanager.SlideTransition
ScreenManagement:
    transition: SlideTransition(direction='left')
    MenuScreen:
    ReactorScreen1:
    ReactorScreen2:
    ReactorScreen3:

<Reactor@BoxButton>:
	orientation: 'vertical'
	size_hint_x: None
	background_color: (0, 1, 1, 1)
	canvas:
		Color:
			rgba: 0.5,0.5,0.5,0
		Rectangle:	
			size: self.size
			pos: (self.x, self.y)

<ReactorLabel@Label>:
	color: (0, 0, 0, 1)
	size_hint_y: 0.2
	canvas.before:
		Color:
			rgba: 0.5,0.5,0.5,1
		Rectangle:	
			size: self.size
			pos: (self.x, self.y)

<ReactorScreen1>
	name: 'reactor1'
	GridLayout:
		cols:1
		id:main_reactor
		BoxLayout:
			orientation: 'horizontal'
			size_hint_y: None 
			size: (0,main_reactor.height/10 )
			canvas:
				Color:
					rgba: 0.8,0.8,0.8,1
				Rectangle:	
					size: self.size
					pos: (self.x, self.y)
			Button:
				text:'Back'
				size_hint: (None, 1)
				size:(main_reactor.width/5,0)
				on_press: root.back() 
			Label:
				id: main_label
				text: 'ONE'
				font_size: '20sp'
				color: (0, 0, 0, 1)

					
					
		BoxLayout:	
			orientation: 'horizontal'
			size_hint:1,1
			canvas:
				Color:
					rgba: 0.5,0.5,0.5,1
				Rectangle:	
					size: self.size
			FloatLayout:
				size_hint:0.5,1
				Image:
					source: 'reactor@1.5.png'
					size_hint_x: 1
					size_hint_y: 0.5
					pos_hint: {'left': 0,'top':0.75}
					allow_stretch: True
			GridLayout:
				cols:1
			    size_hint:(0.5,1)
			    Label:
			    	text: 'Temperature1 - '
			    	color: (0, 0, 0, 1)
			    	text_size: self.size
			    	halign: 'left'
			    	valign: 'middle'
			    	size_hint_y: None 
			    	size: (0, 100)
		    	Label:
			    	text: 'Temperature2 - '
			    	color: (0, 0, 0, 1)
			    	text_size: self.size
			    	halign: 'left'
			    	valign: 'middle'
			    	size_hint_y: None 
			    	size: (0, 100)
		    	Label:
			    	text: 'Humidity - '
			    	color: (0, 0, 0, 1)
			    	text_size: self.size
			    	halign: 'left'
			    	valign: 'middle'
			    	size_hint_y: None 
			    	size: (0, 100)
		    	Label:
			    	text: 'Vapour Pressure - '
			    	color: (0, 0, 0, 1)
			    	text_size: self.size
			    	halign: 'left'
			    	valign: 'middle'
			    	size_hint_y: None 
			    	size: (0, 100)

