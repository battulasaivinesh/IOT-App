#####---------       Custom Widgets     ---------#########

<Reactor@BoxButton>:
	orientation: 'vertical'
	size_hint_x: None
	background_color: (0, 1, 1, 1)
	canvas:
		Color:
			rgba: 0.5,0.5,0.5,0
		Rectangle:	
			size: self.size
			pos: (self.x, self.y)

<ReactorLabel@Label>:
	color: (0, 0, 0, 1)
	size_hint_y: 0.2
	canvas.before:
		Color:
			rgba:  get_color_from_hex('E0E0E2')
		Rectangle:	
			size: self.size
			pos: (self.x, self.y)

<CanvasCustom>:
    value: 60
    angle: 0
    strval: ''
    sen_color: [.5, .3, .1, .8]
    title: 'SENSOR 1'

    Label:
        size: self.texture_size
        text: root.title

    BoxLayout:
        canvas.before:
            Color:
                rgba: [.2, .2, .2, .6]
            Line:
                width: 0.015*root.width
                circle: self.center_x,self.center_y-10,self.width/4,0,360

            Color:
                rgba: root.sen_color
            Line:
                width: 0.026*root.width
                circle: self.center_x,self.center_y-10,self.width/4,0,root.angle
        Label:
            size: self.texture_size
            center: self.center_x,self.center_y
            text: root.strval


#####-----    Internet Status Bar   --------#########


<NetLab>:
    netstatuscolor: [.2, .2, .2, .6]
